<div class="container">

	<div class="row">


		<div class="col-sm-10 col-sm-offset-1">


		<%  @posts.each do |post| %>

		<h2> <%=link_to post.title, post %></h2>
		<div><span class="label label-default">Creador: <%= post.user.email %></span></div>
		<div><span class="label label-default">Fecha de Publicacion: <%= post.created_at.strftime('%A')%> <%= post.created_at.day %> <%= post.created_at.strftime('%B')%> <%= post.created_at.year %> </span></div>

		<p>	<%= post.body[0,250] %>..</p>

		

		<% if signed_in? && post.user==current_user%>
		<%=link_to "Editar Post",edit_post_path(post) %>
		<%=link_to "Eliminar Post",post, method: :delete,data: { confirm: "¿Estás seguro de eliminar este producto?" }%>
		<%end%>




		<% end %>





		</div>
		

	</div>



</div>