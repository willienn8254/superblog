<div class="container">

	<div class="row">

		<h1>Lista de Posts </h1>

		<div class="col-sm-10 col-sm-offset-1">


		<%  @posts.each do |post| %>

		<h2> <%= post.title %></h2>
		<div><span class="label label-default">Creador: <%= post.user.email %></span></div>
		<div><span class="label label-default">Fecha de Publicacion: <%= post.created_at.strftime('%A')%> <%= post.created_at.day %> <%= post.created_at.strftime('%B')%> <%= post.created_at.year %> </span></div>

		<p>	<%= post.body[0,250] %>..</p>

		<%=link_to "Ver detalle",post, class: "btn btn-primary" %>

		<% if signed_in? && post.user==current_user%>
		
		<%=link_to "Editar Post",edit_post_path(post), class: "btn btn-primary" %>
		<%=link_to "Eliminar Post",post, method: :delete,data: { confirm: "¿Estás seguro de eliminar este producto?" }, class: "btn btn-primary" %>
		<%end%>




		<% end %>





		</div>
		

	</div>



</div>